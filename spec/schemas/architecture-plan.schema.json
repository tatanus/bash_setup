{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Architecture Plan Schema",
  "description": "Schema for validating architecture-plan.json",
  "type": "object",
  "required": ["schema_version", "plan_status", "locked_against_tool_spec_sha256", "generated_at_utc", "tool_name", "tool_version", "language_mode", "architecture_plan", "audit_metadata"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "plan_status": {
      "type": "string",
      "enum": ["LOCKED", "DRAFT", "PENDING"]
    },
    "locked_against_tool_spec_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "generated_at_utc": {
      "type": "string"
    },
    "tool_name": {
      "type": "string",
      "minLength": 1
    },
    "tool_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "language_mode": {
      "type": "string",
      "enum": ["bash", "python", "hybrid"]
    },
    "architecture_plan": {
      "type": "object",
      "required": ["overview", "design_philosophy", "components", "language_mode_enforcement", "interfaces", "dependency_graph", "requirements_coverage"],
      "additionalProperties": true,
      "properties": {
        "overview": { "type": "string" },
        "design_philosophy": { "type": "string" },
        "components": {
          "type": "object",
          "required": ["entrypoints"],
          "additionalProperties": true,
          "properties": {
            "entrypoints": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["path", "type"],
                "additionalProperties": true,
                "properties": {
                  "path": { "type": "string" },
                  "type": { "type": "string" },
                  "executable": { "type": "boolean" },
                  "responsibilities": { "type": "array", "items": { "type": "string" } },
                  "functions": { "type": "array", "items": { "type": "string" } }
                }
              }
            },
            "bash_modules": { "type": "array" },
            "python_modules": { "type": "array" },
            "data_files": { "type": "array" },
            "tools": { "type": "array" },
            "test_suite": { "type": "object" },
            "build_system": { "type": "object" }
          }
        },
        "language_mode_enforcement": {
          "type": "object",
          "required": ["mode"],
          "additionalProperties": true,
          "properties": {
            "mode": { "type": "string", "enum": ["bash", "python", "hybrid"] },
            "required_files": { "type": "array", "items": { "type": "string" } },
            "forbidden_file_patterns": { "type": "array", "items": { "type": "string" } },
            "validation_rules": { "type": "array", "items": { "type": "string" } }
          }
        },
        "interfaces": {
          "type": "object",
          "additionalProperties": true
        },
        "dependency_graph": {
          "type": "object",
          "required": ["nodes", "edges", "acyclic"],
          "additionalProperties": true,
          "properties": {
            "description": { "type": "string" },
            "nodes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type", "file_path"],
                "additionalProperties": true,
                "properties": {
                  "id": { "type": "string" },
                  "type": { "type": "string" },
                  "file_path": { "type": "string" }
                }
              }
            },
            "edges": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["from", "to", "type"],
                "additionalProperties": true,
                "properties": {
                  "from": { "type": "string" },
                  "to": { "type": "string" },
                  "type": { "type": "string" }
                }
              }
            },
            "acyclic": { "type": "boolean" }
          }
        },
        "requirements_coverage": {
          "type": "object",
          "required": ["requirements"],
          "additionalProperties": true,
          "properties": {
            "requirements": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "text", "covered_by"],
                "additionalProperties": true,
                "properties": {
                  "id": { "type": "string", "pattern": "^REQ-\\d{3}$" },
                  "text": { "type": "string" },
                  "covered_by": { "type": "array", "items": { "type": "string" } }
                }
              }
            },
            "uncovered": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "text", "remediation"],
                "additionalProperties": true,
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "remediation": { "type": "string" }
                }
              }
            }
          }
        },
        "files_to_modify": { "type": "array" },
        "files_to_create": { "type": "array" },
        "files_to_delete": { "type": "array" },
        "risks": { "type": "array" }
      }
    },
    "audit_metadata": {
      "type": "object",
      "required": ["architecture_gate_run_id", "spec_ratification_verified", "spec_sha256_match"],
      "additionalProperties": true,
      "properties": {
        "architecture_gate_run_id": { "type": "string" },
        "spec_ratification_verified": { "type": "boolean" },
        "spec_sha256_match": { "type": "boolean" }
      }
    }
  }
}
